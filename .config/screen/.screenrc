
# General {{{
# ===========
  # 关闭启动信息
  startup_message off
  # 在意外停机时自动断开所有屏幕
  autodetach on
  # 设置回滚缓冲区
  defscrollback 32000
  # UTF-8 启动
  defutf8 on
# }}}

# Key Bindings {{{
# ================
  # Reloads .screenrc
  bind R eval "source ~/.screenrc"
# }}}

# Appereance {{{
# ==============
  # Set the terminal color to 256color
  term "screen-256color"
# }}}
